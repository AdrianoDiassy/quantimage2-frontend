{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "vconcat": [
    {
      "data": {
        "name": "features"
      },
      "mark": "rect",
      "transform": [
        {
          "calculate": "replace(datum.FeatureID, /(?<modality>.*?)-(?<roi>.*?)-(?<featureName>(?:original|log|wavelet|gradient|square|squareroot|exponential|logarithm|PET|tex).*)/, '$<modality>')",
          "as": "modality"
        },
        {
          "calculate": "replace(datum.FeatureID, /(?<modality>.*?)-(?<roi>.*?)-(?<featureName>(?:original|log|wavelet|gradient|square|squareroot|exponential|logarithm|PET|tex).*)/, '$<roi>')",
          "as": "roi"
        },
        {
          "calculate": "replace(datum.FeatureID, /(?<modality>.*?)-(?<roi>.*?)-(?<featureName>(?:original|log|wavelet|gradient|square|squareroot|exponential|logarithm|PET|tex).*)/, '$<featureName>')",
          "as": "featureName"
        }
      ],
      "width": 700,
      "height": 300,
      "encoding": {
        "x": {
          "field": "PatientID",
          "type": "nominal",
          "title": null,
          "axis": {
            "labels": false
          },
          "sort": "ascending"
        },
        "color": {
          "field": "FeatureValue",
          "type": "quantitative",
          "title": "Feature Value*",
          "scale": {
            "domain": [-2, 2],
            "clamp": false
          }
        },
        "y": {
          "type": "nominal",
          "title": "Features",
          "axis": {
            "labels": false
          }
        },
        "tooltip": [
          {
            "field": "modality",
            "type": "nominal",
            "title": "Modality"
          },
          {
            "field": "roi",
            "type": "nominal",
            "title": "ROI"
          },
          {
            "field": "featureName",
            "type": "nominal",
            "title": "Feature Name"
          },
          {
            "field": "PatientID",
            "type": "nominal",
            "title": "Patient"
          },
          {
            "field": "FeatureValue",
            "type": "quantitative",
            "title": "Value"
          }
        ]
      }
    },
    {
      "data": {
        "name": "status"
      },
      "mark": "rect",
      "height": 20,
      "width": 700,
      "encoding": {
        "x": {
          "field": "PatientID",
          "type": "nominal",
          "title": "Patients",
          "sort": "ascending",
          "axis": {
            "labels": false
          }
        },
        "color": {
          "field": "Outcome",
          "scale": {
            "range": ["#59c26e", "#f25a38", "#cccccc"]
          }
        },
        "tooltip": [
          {
            "field": "PatientID",
            "type": "nominal",
            "title": "Patient"
          }
        ]
      }
    }
  ]
}
