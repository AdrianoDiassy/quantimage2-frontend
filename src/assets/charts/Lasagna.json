{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "vconcat": [
    {
      "data": {
        "name": "features"
      },
      "mark": "rect",
      "height": 300,
      "width": 900,
      "encoding": {
        "x": {
          "field": "PatientID",
          "type": "nominal",
          "title": null,
          "axis": {
            "labels": false
          },
          "sort": "ascending"
        },
        "color": {
          "field": "feature_value",
          "type": "quantitative",
          "title": "Feature Value*",
          "scale": {
            "domain": [-2, 2],
            "clamp": false
          }
        },
        "y": {
          "field": "feature_id",
          "type": "nominal",
          "title": "Features",
          "axis": {
            "labels": false
          }
        },
        "tooltip": [
          { "field": "PatientID", "type": "ordinal", "title": "Patient" },
          { "field": "feature_id", "type": "nominal", "title": "Feature" },
          {
            "field": "feature_value",
            "type": "quantitative",
            "title": "Valeur"
          }
        ]
      }
    },
    {
      "data": {
        "name": "status"
      },
      "mark": "rect",
      "height": 20,
      "width": 900,
      "encoding": {
        "x": {
          "field": "PatientID",
          "type": "nominal",
          "title": "Patients",
          "sort": "ascending"
        },
        "color": {
          "field": "Outcome",
          "scale": {
            "range": ["#59c26e", "#f25a38"]
          }
        }
      }
    }
  ]
}
